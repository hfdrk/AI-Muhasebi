{
  "name": "@repo/backend-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && prisma generate",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "tsx scripts/test-db-setup.ts && vitest run --reporter=verbose --reporter=json --reporter=json --outputFile=../../test-results/backend-results.json",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "@repo/config": "workspace:*",
    "@repo/core-domain": "workspace:*",
    "@repo/shared-utils": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "express": "^4.18.2",
    "prisma": "^5.19.1",
    "supertest": "^6.3.3",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.2.0"
  }
}
