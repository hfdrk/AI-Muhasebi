{
  "name": "@repo/backend-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "sh build.sh",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "tsx scripts/test-db-setup.ts && vitest run --reporter=verbose --reporter=json --reporter=json --outputFile=../../test-results/backend-results.json",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "seed:report-definitions": "tsx prisma/seed-report-definitions.ts",
    "seed:notifications": "tsx prisma/seed-notifications.ts",
    "seed:demo": "tsx scripts/seed-demo.ts",
    "seed:users": "tsx prisma/seed-users.ts",
    "seed:tasks": "tsx prisma/seed-tasks.ts",
    "seed:field-mappings": "tsx prisma/seed-field-mappings.ts",
    "seed:integration-providers": "tsx prisma/seed-integration-providers.ts",
    "update:test-user-role": "tsx prisma/update-test-user-role.ts",
    "perf:test": "tsx scripts/perf/load-test.ts",
    "test:smoke": "vitest run -- smoke.integration.test.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "@repo/config": "workspace:*",
    "@repo/core-domain": "workspace:*",
    "@repo/shared-utils": "workspace:*",
    "adm-zip": "^0.5.16",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jspdf": "^3.0.4",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "@sentry/node": "^7.91.0",
    "nodemailer": "^6.9.8",
    "handlebars": "^4.7.8",
    "pdfkit": "^0.15.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "pgvector": "^0.2.0",
    "otplib": "^12.0.1",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.7.0",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/handlebars": "^4.1.0",
    "@types/multer": "^1.4.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/node": "^20.11.0",
    "@types/nodemailer": "^7.0.4",
    "@types/pdfkit": "^0.13.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "prisma": "^5.19.1",
    "supertest": "^6.3.3",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.2.0",
    "zod": "^3.22.4"
  }
}
